<div class="container">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto text-center round shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light rounded-top py-4 mb-0">管理者ログインフォーム</h5>
      <div class="form-body p-4 bg-white rounded-bottom">
        <div class="mx-auto text-center">
          <p>
            メールアドレスと<br>
            パスワードをご入力ください。
          </p>
        </div>
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレス", required: true %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-block btn-info mt-5" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>

