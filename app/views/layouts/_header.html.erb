          ようこそ、<%= current_user.name %>さん！
        <% end %>
      </div>

      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Taggle navigaion">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
        <ul class="navbar-nav ml-auto">

         <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to mypage_path, class: 'nav-link text-light' do %>
                <i class="fas fa-user"></i>マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_post_path, class: 'nav-link text-light ', 'data-turbolinks': false do %>
