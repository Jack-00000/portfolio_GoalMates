<table class="table">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="text-center">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100), class: "users-index-image rounded-circle"; %><br>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            <div class="mt-3"><%= user.name %></div>
          <% end %>
        </td>
        <td class="spview d-none d-sm-block">
          <div class="mt-3">【自己紹介】</div>
          <% if user.name != "guestuser" %>
            <% if user.introduction.present? %>
              <div class="users-index"><%= user.introduction %></div>
            <% else %>
              <div class="users-index">自己紹介文がありません。</div>
            <% end %>
          <% else %>
            <div class="users-index">ゲストユーザーです。</div>
          <% end %>
        </td>
        <td>
          <div class="mt-2">
            <div class="follow-btn<%= user.id %> text-nowrap">
              <%= render 'public/relationships/btn', user: user %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate users %>