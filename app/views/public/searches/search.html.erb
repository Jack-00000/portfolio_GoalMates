<div class="container">
  <div class="row">
    <div class="col-lg-9 mx-auto">
      <div class="card shadow-lg py-3 mb-3">
        <% if @users.present? && @posts.present? %>
          <div class="px-3">
            <h4 class="headline col-lg-12 col-md-12 col-sm-12 mb-3">【名前と具体的な行動の検索結果】検索ワード："<%= @content %>"</h4>
            <h4>【名前】</h4>
              <%= render 'public/users/index', users: @users %>
            <hr class="mt-5">
            <h4>【具体的な行動】</h4>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-12 mx-auto">
            <%= render 'public/posts/index', posts: @posts %>
          </div>

        <% elsif @users.present? && @posts.empty? %>
          <div class="px-3">
            <h3 class="headline col-lg-12 col-md-12 col-sm-12 text-center mb-3">【名前の検索結果】検索ワード："<%= @content %>"</h3>
            <h4>【名前】</h4>
            <%= render 'public/users/index', users: @users %>
          </div>

        <% elsif @users.empty? && @posts.present? %>
          <div class="px-3">
            <h3 class="headline col-lg-12 col-md-12 col-sm-12 text-center mb-3">【具体的な行動の検索結果】検索ワード："<%= @content %>"</h3>
            <h4>【具体的な行動】</h4>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-12 mx-auto">
            <%= render 'public/posts/index', posts: @posts %>
          </div>

        <% else %>
          <div class="px-3　 text-center">
            <h3>"<%= @content %>"に該当はありません。</h3>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
