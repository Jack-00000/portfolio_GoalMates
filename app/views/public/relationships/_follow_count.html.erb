<% if user.released? || user == current_user %>
  <span class="mr-3 mb-2"><%= link_to 'フォロー' + user.followings.count.to_s + '人', user_followings_path(user.id), class: 'btn btn-sm btn-outline-primary' %></span>
  <span class="mr-3"><%= link_to 'フォロワー' + user.followers.count.to_s + '人', user_followers_path(user.id), class: 'btn btn-sm btn-outline-primary' %></span>
<% else %>
  <span class="mr-3">フォロー<%= user.followings.count %>人</span>
  <span class="mr-3">フォロワー<%= user.followers.count %>人</span>
<% end %>