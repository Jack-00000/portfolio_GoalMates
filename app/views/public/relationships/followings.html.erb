<div class="container">
  <div class="row">
    <div class="col-lg-9 mx-auto">
      <div class="card shadow-lg px-3 py-3">
        <h2 class="headline col-lg-12 col-md-12 col-sm-12 text-center">
          <%= @user.name %>さんのフォロー一覧
        </h2>
        <div class="mt-2">
          <% if @users.present? %>
            <%= render 'public/users/index', users: @users %>
          <% else %>
            <p>まだフォローしていません。</p>
          <% end %>
        </div>
      </div>
      <%= link_to '戻る', :back, class: "btn btn-outline-dark mt-3" %>
    </div>
  </div>
</div>