<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-11 mx-2 mx-sm-auto text-center round shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light rounded-top py-4 mb-0">新規登録フォーム</h5>
      <div class="form-body p-4 bg-white rounded-bottom">
        <div class="mx-auto text-center">
          <p>
            必要事項を入力してください。
          </p>
        </div>
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <div class="text-left">
            <%= render "public/shared/error_messages", resource: resource %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class: "form-control", autocomplete: "name", placeholder: "名前（２文字以上）" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード（６桁以上）" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード確認用"  %>
          </div>

          <div class="actions">
            <%= f.submit "登録", class: "btn btn-block btn-success mt-5" %>
          </div>
        <% end %>
        <div class="mt-3">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
